<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane fx:id="pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="cc.shinbi.hanoi.view.MainFrame">
   <bottom>
      <TextArea fx:id="logText" editable="false" prefHeight="200.0" prefWidth="900.0" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <VBox prefHeight="400.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="heightCombo" onAction="#onChangeHeight" prefWidth="150.0" />
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStart" prefWidth="150.0" text="Start" />
            <Button mnemonicParsing="false" onAction="#onClose" prefWidth="150.0" text="Close" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
      <BorderPane fx:id="canvasPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
